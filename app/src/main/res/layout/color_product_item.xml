<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_shadow"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="#88d9fa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_color"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:src="@color/g_blue"
        app:layout_constraintStart_toStartOf="@id/image_shadow"
        app:layout_constraintTop_toTopOf="@id/image_shadow"
        app:layout_constraintEnd_toEndOf="@id/image_shadow"
        app:layout_constraintBottom_toBottomOf="@id/image_shadow"/>

    <ImageView
        android:id="@+id/iv_check_color"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@id/image_color"
        app:layout_constraintTop_toTopOf="@id/image_color"
        app:layout_constraintEnd_toEndOf="@id/image_color"
        app:layout_constraintBottom_toBottomOf="@id/image_color"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>